{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "python",
    "py",
    "elm"
  ],
  "codeLens.enable": true,
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "change"
      }
    },
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    },
    "clojure-lsp": {
      "command": "bash",
      "args": ["-c", "clojure-lsp"],
      "filetypes": ["clojure"],
      "rootPatterns": ["project.clj"],
      "additionalSchemes": ["jar", "zipfile"],
      "trace.server": "verbose",
      "initializationOptions": {}
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  },

  // coc-python
  // unsure how to configure it to work well with nix
  "python.jediPath": "/Users/sherubthakur/Library/Python/3.7/lib/python/site-packages",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "/Users/sherubthakur/.nix-profile/bin/flake8",
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "/Users/sherubthakur/.nix-profile/bin/mypy",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/Users/sherubthakur/.nix-profile/bin/black",
  "python.sortImports.path": "/Users/sherubthakur/.nix-profile/bin/isort",
  "yaml.format.enable": true,

  // coc-explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableVimDevicons": true,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  // User Dictionary
  "cSpell.userWords": [
    "Devicons",
    "Floaterm",
    "IAM's",
    "Kolkata",
    "Monoid",
    "Nerdfont",
    "Semigroup",
    "alacritty",
    "asyncio",
    "automerged",
    "boto",
    "combinator",
    "combinators",
    "dependabot",
    "evicter",
    "exapi",
    "executables",
    "fmap",
    "foldr",
    "hlint",
    "isort",
    "itertools",
    "mempty",
    "mypy",
    "noqa",
    "onupdate",
    "psycopg",
    "pylint",
    "pytest",
    "pytz",
    "repos",
    "rescheduler",
    "rtsopts",
    "semver",
    "sherubthakur",
    "sherubthakurthakur",
    "shuttl",
    "shuttlis",
    "statsd",
    "tzinfo",
    "vsplit"
  ]
}
